<section class="container mt-4 mb-4">
        <div class="container">
            <div class="row mb-3">
            <% @users.each do |user| %>                    
                <div class="col-md-6 pt-4">
                    <div class="d-flex flex-row border rounded">
                        <div class="p-0 w-15">
                            <%= image_tag(user.avatar_url, class: 'rounded') %>
                        </div>
                        <div class="row col-md-12">
                        <div class=" col-md-8 pl-3 pt-2 pb-2 border-left">
                                <h4 class="text-primary"><%= user.firstname %><%= user.lastname %></h4>
                                <h5 class="text-info"><%= user.email %></h5>
                                <ul class="m-0 float-left" style="list-style: none; margin:0; padding: 0">
                                    <li><a href=""><i class="fab fa-facebook-square"></i> Facebook</li></a>
                                    <li><a href=""><i class="fab fa-twitter-square"></i> Twitter</li></a>
                                </ul>
                            </div>
                            <div class="col-md-4 bg-success align-items-end text-center">
                                <a href="<%= user_path(user) %> "class=""><i class="far fa-user"></i> View Profile</a>
                            </div>
                        </div>
                    </div>
                </div>
            <% end %>            
            </div>
        </div>
</section>

